  "components": {
    "schemas": {
      "User" : {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "perfil": {
            "type": "integer"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "isAvailable": {
            "type": "boolean"
          },
          "price": {
            "type": "number"
          }
        }
      },
      "Order" : {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }, 
          "orderingDate": {
             "type": "string", 
             "format": "date-time"
          },
          "user" : {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "name" : {"type": "string"},
              "email": {"type": "string"}
            }
          },          
          "products": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {"type": "string"},
                    "name": {"type": "string"},
                    "quantity": {"type": "integer"},
                    "price": {"type": "number"}
              }
            }
          },
          "totalValue": {
            "type": "number"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }      
